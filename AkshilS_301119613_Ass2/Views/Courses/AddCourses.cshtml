

@model AkshilS_301119613_Ass2.Models.Courses

@{
    Layout = "_Layout";
    ViewBag.Title = "Add Courses";
}
<!DOCTYPE html>


<head>
    <meta name="viewport" content="width=device-width" />

</head>

<div class="row">

    <div class="col-md-9">

        <form class="needs-validation p-a-1" asp-action="AddCourse" method="post">

            <input type="hidden" asp-for="CourseId" />

            <div asp-validation-summary="All"></div>

            <div class="form-group">
                <label asp-for="Name">Course Name:</label>
                <div><span asp-validation-for="Name" class="text-danger"></span></div>
                <input asp-for="Name" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="degree">Course Duration:</label>
                <div><span asp-validation-for="degree" class="text-danger"></span></div>
                <input asp-for="degree" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="department">Course Department:</label>
                <div><span asp-validation-for="department" class="text-danger"></span></div>
                <input asp-for="department" class="form-control" />
            </div>
            <div>
                <button class="btn btn-lg btn-light" type="submit">
                    Save
                </button>
                <a asp-action="Index" class="btn btn-secondary">Cancel</a>
            </div>

        </form>

    </div>



</div>
